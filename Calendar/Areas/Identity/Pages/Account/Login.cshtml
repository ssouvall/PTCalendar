@page
@model LoginModel

@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Log in";
}
<div class="container m-0">
    <div class="row">
        <div class="col-12">
            <section>
                <div class="text-center">
                    <h4>Here for a test drive? Click the buttons below to demo the app by role:</h4>
                </div>
                <form class="" id="account" method="post">
                    <div class="form-group text-center">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary" name="demoEmail" value="DemoAdminEmail">Demo Admin</button> |
                                <button type="submit" class="btn btn-primary" name="demoEmail" value="DemoSubEmail">Demo Physical Therapist</button> |
                                <button type="submit" class="btn btn-primary" name="demoEmail" value="DemoDevEmail">Demo Clerical</button>
                            </div>
                        </div>
                    </div>
                </form>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Log in</button>
                    </div>
                    <div class="form-group text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>

            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
