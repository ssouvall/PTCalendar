@model Calendar.Models.Event

@{
    ViewData["Title"] = "Delete";
}
<div class="card col-lg-8 col-md-12 col-sm-12 mx-auto">
    <div class="card-header">
        <h1>Delete</h1>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this Appointment? You cannot undo this action.</h3>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">Back</a>
        </form>
    </div>
</div>

