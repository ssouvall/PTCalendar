@using Calendar.Models.Enums
@model Calendar.Models.Visit

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Visit</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <select asp-for="PatientId" class ="form-control" asp-items="ViewBag.PatientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VisitType" class="control-label"></label>
                <select asp-for="VisitType" class="form-control" asp-items="Html.GetEnumSelectList<VisitType>()"></select>
