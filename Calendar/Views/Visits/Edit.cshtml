@using Calendar.Models.Enums
@model Calendar.Models.Visit

@{
    ViewData["Title"] = "Edit";
}
<section class="calendar-section">
    <h1>Edit Visit</h1>
    <hr />
    <div class="row card shadow p-3">
        <div class="col-12 card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="PatientId">Patient</label>
                    <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VisitType">Visit Type</label>
                    <select asp-for="VisitType" class="form-control" asp-items="Html.GetEnumSelectList<VisitType>()">
                    </select>
                    <span asp-validation-for="VisitType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date">Visit Date</label>
                    <input type="date" asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Start">Visit Start Time</label>
                    <input type="time" asp-for="Start" class="form-control" />
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="End">Visit End Time</label>
                    <input type="time" asp-for="End" class="form-control" />
                    <span asp-validation-for="End" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="Subjective" class="form-control" rows="10" cols="50" placeholder="Subjective"></textarea>
                    <span asp-validation-for="Subjective" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="Objective" class="form-control" rows="10" cols="50" placeholder="Objective"></textarea>
                    <span asp-validation-for="Objective" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="Assessment" class="form-control" rows="10" cols="50" placeholder="Assessment"></textarea>
                    <span asp-validation-for="Assessment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="Plan" class="form-control" rows="10" cols="50" placeholder="Plan"></textarea>
                    <span asp-validation-for="Plan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-outline-primary" asp-action="Details" asp-controller="Patients" asp-route-id="@Model.PatientId">Back</a>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
